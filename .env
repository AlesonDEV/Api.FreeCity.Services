# .env

# --- КОНФІГУРАЦІЯ ДОДАТКУ ---

# URL для завантаження GTFS архіву
GTFS_URL="http://track.ua-gis.com/gtfs/lviv/static.zip"

# Рядок підключення до MongoDB
# Для локального MongoDB:
MONGO_CONNECTION_STRING="mongodb+srv://yuradebelyak:Yura2005@cluster0.wrsxvar.mongodb.net/"
# Якщо MongoDB в Docker-контейнері з ім'ям 'mongo-db' у тій самій мережі:
# MONGO_CONNECTION_STRING="mongodb://mongo-db:27017/"
# Якщо MongoDB на хості при запуску FastAPI в Docker (для Docker Desktop):
# MONGO_CONNECTION_STRING="mongodb://host.docker.internal:27017/"

# Назва бази даних MongoDB
MONGO_DB_NAME="gtfs_lviv"

# Інтервал оновлення даних в секундах (7 днів)
UPDATE_INTERVAL_SECONDS=604800
# UPDATE_INTERVAL_SECONDS=300 # Для тестування (5 хвилин)

# Часова зона додатку
APP_TIMEZONE="Europe/Kiev"

# CORS Origins (розділені комою, без пробілів після коми)
CORS_ORIGINS="http://localhost:3000,http://localhost:5173,http://localhost:3001"

# Порт та хост для Uvicorn (переважно для локального запуску або Docker)
APP_PORT="8000"
APP_HOST="0.0.0.0" # 0.0.0.0 потрібно для Docker, для локального можна 127.0.0.1

